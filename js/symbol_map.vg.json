{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "config":{"background": "aliceblue"},
  "title": "Number of times an Artist ended the year in the Billboard Top 100 (2006-2021)",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lachiep9/3179/main/Week%209%20Homework/js/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey","stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lachiep9/3179/main/Week%209%20Homework/data/Billboard%20artists%20by%20country.csv"
      },
      "mark": {"type": "circle", "color":"green"},
      "encoding": {          
        "tooltip": [
      {"field": "Country Name", "type": "nominal", "title":"Country"},
      {"field": "Normalised", "title":"Finishes in top 100 per 10 million people", "type": "quantitative"}
    ],
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Normalised",
          "type": "quantitative",
          "scale": {"domain": [0, 20]},
          "legend": {
            "orient": "top-left",
            "title": "Per 10 Million Population",
            "values": [1,10,20,30,40]
            }
        }
      }
    }
  ]
}